---
import Section from '../ui/Section.astro';
import Card from '../ui/Card.astro';

// Get the company logos
interface Experience {
  company: string;
  logo: string;
  position: string;
  period: string;
  description: string;
}

const experiences: Experience[] = [
{
    company: 'Bmg Bank',
    logo: '/assets/svgs/bmg.png',
    position: 'DevRel | Platform Engineer',
    period: 'Jan 2024 at now',
    description: 'Focuses on optimizing the dev`s interaction with tools, processes, and platforms used in software development'
  },
  {
    company: 'Bmg Bank',
    logo: '/assets/svgs/bmg.png',
    position: 'Solutions Architech',
    period: 'Feb 2023 - Abr 2024',
    description: 'Help to create architecture reference for programming language(backend and frontend), frameworks, Infrasctructure'
  },
  {
    company: 'BTG Bank',
    logo: '/assets/svgs/btg-pactual.png',
    position: 'Senior SRE',
    period: 'Set 20210 - Dez 2023',
    description: 'I designed and managed Kubernetes clusters, collaborated with software engineering teams to integrate microservices architecture, and developed monitoring and logging solutions with Prometheus and Grafana.'
  },
  {
    company: 'Semear Bank',
    logo: '/assets/svgs/banco_semear_logo.jpeg',
    position: 'Tech Lead SRE Team',
    period: 'Jul 2020 - Jul 2021',
    description: 'I led the migration from a local data center to AWS, overseeing the entire infrastructure transition. By implementing FinOps principles and establishing security guardrails, we optimized resource usage and costs, achieving a 30% reduction in overall infrastructure expenses'
  },
  {
    company: 'Bmg Bank',
    logo: '/assets/svgs/bmg.png',
    position: 'SRE / DevOps Engineer Tech lead',
    period: 'Ago 2019 - Jun 2020',
    description: 'Start transitions from infra to Cloud with a fresh team. Training SRE package (docker, python, Cloud (AWS))'
  },
  {
    company: 'Squadra Digital',
    logo: '/assets/svgs/squadradigital_logo.jpeg',
    position: 'SRE / Solutions Architech',
    period: 'May 2017 - Jul 2019',
    description: 'Deploy and manage Openstack private Cloud'
  }
];
---

<Section id="experience" title="Experience" subtitle="Leave the tickets and bring the people together">
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {
      experiences.map(({ company, logo, position, period, description }) => (
        <Card hover={true} class="h-full">
          <div class="p-6 flex flex-col h-full">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-gray-100 dark:bg-gray-800 rounded-lg overflow-hidden flex items-center justify-center mr-4">
                <img src={logo} alt={company} class="w-10 h-10 object-contain" />
              </div>
              <div>
                <h3 class="font-bold text-xl">{company}</h3>
                <p class="text-sm text-gray-500 dark:text-gray-400">{period}</p>
              </div>
            </div>
            
            <h4 class="text-lg font-medium mb-2 text-primary">{position}</h4>
            <p class="text-gray-600 dark:text-gray-300 text-sm mt-auto">{description}</p>
          </div>
        </Card>
      ))
    }
  </div>
</Section> 